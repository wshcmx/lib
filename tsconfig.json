{
  "compilerOptions": {
    "target": "ES5",
    "module": "Preserve",
    "noLib": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "typeRoots": [
      "node_modules/@wshcmx/types/lib",
      "node_modules/@wshcmx/types/lib/xml"
    ]
  },
  "include": [
    "src/*"
  ]
}
